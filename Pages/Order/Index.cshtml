@page
@{
    ViewData["Title"] = "Order History";
}

<div class="Order-section">
    <h1>Your Orders</h1>
    <p>Review your recent purchases and check their statuses.</p>
</div>

<section class="order-history">
    <div class="order-grid">
        <!-- Order Card 1 -->
        <div class="order-card">
            <div class="order-info">
                <h4>Order #12345</h4>
                <p><strong>Date:</strong> 01/14/2025</p>
                <p><strong>Total:</strong> $150.00</p>
                <p><strong>Status:</strong> <span class="status delivered">Delivered</span></p>
            </div>
            <div class="order-products">
                <img src="/images/1.jpg" alt="Product 1" />
                <img src="/images/2.jpg" alt="Product 2" />
            </div>
            <div class="order-actions">
                <a href="/Order/Details/12345" class="btn-primary">View Details</a>
            </div>
        </div>

        <!-- Order Card 2 -->
        <div class="order-card">
            <div class="order-info">
                <h4>Order #12346</h4>
                <p><strong>Date:</strong> 01/12/2025</p>
                <p><strong>Total:</strong> $95.50</p>
                <p><strong>Status:</strong> <span class="status shipped">Shipped</span></p>
            </div>
            <div class="order-products">
                <img src="/images/3.jpg" alt="Product 3" />
            </div>
            <div class="order-actions">
                <a href="/Order/Details/12346" class="btn-primary">View Details</a>
            </div>
        </div>
    </div>
</section>
