@page "{orderId:int}"
@model SellerAutomationSystem.Pages.Order.DetailsModel
@{
    ViewData["Title"] = "Order Details";
}

<div class="order-details-container">
    <h1>Order Details</h1>

    <h3>Order Number: @Model.Order.Id</h3>
    <p><strong>Date:</strong> @Model.Order.OrderDate.ToString("dd/MM/yyyy")</p>
    <p><strong>Shipping Address:</strong> @Model.Order.ShippingAddress</p>
    <p><strong>Status:</strong> @Model.Order.Status</p>
    <p><strong>Total Price:</strong> $@Model.Order.TotalPrice</p>

    <h4>Items:</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>$@item.Price</td>
                    <td>$@(item.Quantity * item.Price)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
