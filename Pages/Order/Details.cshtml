@page
@model ECommerceWebApp.Pages.Order.Pages_Order_Details
@{
    ViewData["Title"] = "Order Details";
}

<div class="container py-5">
    <!-- Order Details Header -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h1 class="card-title text-center mb-4">Order Details</h1>
            <p><strong>Order ID:</strong> 12345</p>
            <p><strong>Date:</strong> 01/14/2025</p>
            <p><strong>Total:</strong> $150.00</p>
            <p><strong>Status:</strong> <span class="badge bg-success">Delivered</span></p>
        </div>
    </div>

    <!-- Product List -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title mb-4">Products in this Order</h2>
            <div class="row g-4">
                <!-- Product Item 1 -->
                <div class="col-md-6">
                    <div class="card h-100">
                        <img src="/images/9.jpg" class="card-img-top" alt="Product 1">
                        <div class="card-body text-center">
                            <h5 class="card-title">Product 1</h5>
                            <p class="card-text"><strong>Price:</strong> $50.00</p>
                            <p class="card-text"><strong>Quantity:</strong> 1</p>
                        </div>
                    </div>
                </div>

                <!-- Product Item 2 -->
                <div class="col-md-6">
                    <div class="card h-100">
                        <img src="/images/8.jpg" class="card-img-top" alt="Product 2">
                        <div class="card-body text-center">
                            <h5 class="card-title">Product 2</h5>
                            <p class="card-text"><strong>Price:</strong> $100.50</p>
                            <p class="card-text"><strong>Quantity:</strong> 1</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Back Button -->
    <div class="text-center mt-4">
        <a href="/Order/Index" class="btn btn-primary">Back to Orders</a>
    </div>
</div>
