@page
@model ECommerceWebApp.Pages.Order.IndexModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Alışverişte Yeni Bir Deneyim";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Playfair Display', serif;
            color: #000;
            margin: 0;
            padding: 0;
        }

        .hero-section {
            background: url('/images/7.jpg') no-repeat center center;
            background-size: cover;
            color: white;
            height: 100vh;
            width: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

            .hero-section h1 {
                font-size: 4rem;
                font-weight: bold;
                margin-bottom: 20px;
            }

            .hero-section p {
                font-size: 1.5rem;
                margin-bottom: 30px;
            }

            .hero-section .btn {
                font-size: 1.2rem;
                padding: 15px 30px;
                background-color: #000;
                color: white;
                border: none;
                transition: all 0.3s ease-in-out;
            }

                .hero-section .btn:hover {
                    background-color: #333;
                }

        .product-section {
            padding: 50px 0;
            background-color: #f8f9fa;
        }

            .product-section .product-card {
                border: none;
                transition: transform 0.3s ease;
            }

                .product-section .product-card:hover {
                    transform: scale(1.05);
                }

        .cta-section {
            padding: 50px;
            background-color: #007bff;
            color: white;
            text-align: center;
        }
    </style>
</head>
<body>

    <div class="hero-section">
        <h1>Hayallerinizdeki Ürünlere Ulaşın</h1>
        <p>Alışverişin tadını çıkarın, özel fırsatlarla tanışın.</p>
        <a href="#products" class="btn">Keşfetmeye Başla</a>
    </div>

    <div id="products" class="product-section">
        <div class="container">
            <h2 class="text-center mb-5">Öne Çıkan Ürünler</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card product-card">
                        <img src="/images/1.jpg" class="card-img-top" alt="Ürün 1">
                        <div class="card-body">
                            <h5 class="card-title">Ürün 1</h5>
                            <p class="card-text">Kısa ürün açıklaması buraya gelecek.</p>
                            <a href="/Products/1" class="btn btn-primary">Ürünü İncele</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card product-card">
                        <img src="/images/2.jpg" class="card-img-top" alt="Ürün 2">
                        <div class="card-body">
                            <h5 class="card-title">Ürün 2</h5>
                            <p class="card-text">Kısa ürün açıklaması buraya gelecek.</p>
                            <a href="/Products/2" class="btn btn-primary">Ürünü İncele</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card product-card">
                        <img src="/images/3.jpg" class="card-img-top" alt="Ürün 3">
                        <div class="card-body">
                            <h5 class="card-title">Ürün 3</h5>
                            <p class="card-text">Kısa ürün açıklaması buraya gelecek.</p>
                            <a href="/Products/3" class="btn btn-primary">Ürünü İncele</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer>
        @await Html.PartialAsync("_Footer")
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>