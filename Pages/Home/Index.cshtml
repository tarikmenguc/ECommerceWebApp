@page
@model ECommerceWebApp.Pages.Home.IndexModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Alışverişte Yeni Bir Deneyim";
}

<!-- Hero Section -->
<div class="hero-section">
    <h1>Hayallerinizdeki Ürünlere Ulaşın</h1>
    <p>Alışverişin tadını çıkarın, özel fırsatlarla tanışın.</p>
    <a href="#products" class="btn btn-primary">Keşfetmeye Başla</a>
</div>

<!-- Products Section -->
<div id="products" class="home-product-section">
    <div class="container">
        <h2 class="text-center mb-5">Öne Çıkan Ürünler</h2>
        <div class="row">
            <!-- Ürün Kartları -->
            <div class="col-md-4">
                <div class="card home-product-card">
                    <img src="/images/1.jpg" class="card-img-top" alt="Ürün 1">
                    <div class="card-body">
                        <h5 class="card-title">Ürün 1</h5>
                        <p class="card-text">Kısa ürün açıklaması buraya gelecek.</p>
                        <a href="/Products/1" class="btn btn-primary">Ürünü İncele</a>
                    </div>
                </div>
            </div>
            <!-- Diğer Ürün Kartları -->
            <div class="col-md-4">
                <div class="card home-product-card">
                    <img src="/images/2.jpg" class="card-img-top" alt="Ürün 2">
                    <div class="card-body">
                        <h5 class="card-title">Ürün 2</h5>
                        <p class="card-text">Kısa ürün açıklaması buraya gelecek.</p>
                        <a href="/Products/2" class="btn btn-primary">Ürünü İncele</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card home-product-card">
                    <img src="/images/3.jpg" class="card-img-top" alt="Ürün 3">
                    <div class="card-body">
                        <h5 class="card-title">Ürün 3</h5>
                        <p class="card-text">Kısa ürün açıklaması buraya gelecek.</p>
                        <a href="/Products/3" class="btn btn-primary">Ürünü İncele</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Call to Action Section -->
<div class="cta-section">
    <h2>Şimdi Alışveriş Yapın!</h2>
    <p>En iyi fırsatları kaçırmayın.</p>
</div>
