@page
@model ECommerceWebApp.Pages.Account.Pages_Account_Login
@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="login-card">
        <!-- Sign-In Section -->
        <div class="login-form">
            <h2>SIGN-IN</h2>
            <p>Sign-in with your email address and password</p>
            <form method="post">
                <input type="email" name="email" placeholder="Email Address" required>
                <input type="password" name="password" placeholder="Password" required>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <label>
                        <input type="checkbox" name="remember" value="true"> Remember Me
                    </label>
                    <a href="/ForgotPassword">Forgot Password?</a>
                </div>
                <button type="submit" class="btn-primary">SIGN-IN</button>
            </form>
        </div>

        <!-- Create Account Section -->
        <div class="create-account">
            <h2>CREATE AN ACCOUNT</h2>
            <p>Register to enjoy the benefits of your account:</p>
            <ul>
                <li><i class="fas fa-gift"></i> Discover latest news and exclusive offers.</li>
                <li><i class="fas fa-history"></i> View your order history and saved addresses.</li>
                <li><i class="fas fa-heart"></i> Save items to your Wishlist.</li>
                <li><i class="fas fa-credit-card"></i> Checkout faster.</li>
            </ul>
            <a href="/Register" class="btn-secondary">CREATE ACCOUNT</a>
        </div>
    </div>
</div>
